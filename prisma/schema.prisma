datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Calendario {
  id Int @id @default(autoincrement())
  dia String
  tarefas Tarefa[]
  @@map("calendario")
}

model Tarefa {
  id Int @id @default(autoincrement())
  tarefa String
  data_id Int
  status String
  calendario Calendario @relation(fields: [data_id], references: [id])
  icone Icone? @relation(fields: [iconeId], references: [id])
  iconeId Int?
  iconeBase64 String?
  @@map("tarefa")
}


model Icone {
  id Int @id @default(autoincrement())
  nome String
  url String
  tarefas Tarefa[]
  @@map("icone")
}
